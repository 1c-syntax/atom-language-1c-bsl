	}
	{
		name: "keyword.operator.logical.bsl"
		match: "(?i:\\b(НЕ|И|ИЛИ)\\b)"
	}
	{
		name: "keyword.operator.comparison.bsl"
		match: "<=|>=|=|<|>"
	}
	{
		name: "keyword.operator.assignment.bsl"
		match: "(=)"
